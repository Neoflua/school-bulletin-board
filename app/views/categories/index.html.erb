<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="mb-0">
        <i class="fas fa-th-large text-primary"></i>
        カテゴリ一覧
      </h1>
    </div>
  </div>
</div>

<div class="row">
  <% @categories.each do |category| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="category-card fade-in-up">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to category.name, category_path(category), class: "text-decoration-none" %>
          </h5>
          <p class="card-text">
            <%= category.description %>
          </p>
          <div class="category-stats">
            <span class="text-muted">
              <i class="fas fa-file-alt me-1"></i>
              <%= pluralize(category.posts.count, "投稿") %>
            </span>
            <%= link_to "投稿を見る", category_path(category), class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @categories.empty? %>
  <div class="alert alert-info fade-in-up">
    <i class="fas fa-info-circle me-2"></i>
    まだカテゴリがありません。
  </div>
<% end %>

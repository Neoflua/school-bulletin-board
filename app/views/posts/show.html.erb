      </ol>
    </nav>

    <div class="card mb-4 fade-in-up">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
          <h1 class="card-title mb-0">
            <i class="fas fa-file-alt text-primary me-2"></i>
            <%= @post.title %>
          </h1>
          <div class="d-flex align-items-center gap-2">
            <% if @post.anonymous? %>
              <span class="anonymous-badge">
                <i class="fas fa-user-secret me-1"></i>ÂåøÂêç
              </span>
            <% end %>
            <div class="btn-group" role="group">
              <%= link_to edit_post_path(@post), class: "btn btn-outline-primary btn-sm" do %>
                <i class="fas fa-edit me-1"></i>Á∑®ÈõÜ
              <% end %>
              <%= link_to post_path(@post), 
                  method: :delete, 
                  data: { 
                    confirm: "„Åì„ÅÆÊäïÁ®ø„ÇíÂâäÈô§„Åó„Åæ„Åô„ÅãÔºü\n„Åì„ÅÆÊìç‰Ωú„ÅØÂèñ„ÇäÊ∂à„Åõ„Åæ„Åõ„Çì„ÄÇ",
                    turbo_method: :delete 
                  }, 
                  class: "btn btn-outline-danger btn-sm" do %>
                <i class="fas fa-trash me-1"></i>ÂâäÈô§
              <% end %>
            </div>
          </div>
        </div>
        
        <div class="mb-3">
          <div class="d-flex align-items-center">
            <i class="fas fa-user me-2 text-muted"></i>
            <span class="text-muted">
              <%= @post.anonymous? ? "ÂåøÂêç" : @post.author_name %> | 
              <i class="fas fa-folder me-1"></i>
              <%= @post.category.name %> | 
              <i class="fas fa-clock me-1"></i>
              <%= @post.created_at.strftime("%Y/%m/%d %H:%M") %>
            </span>
          </div>
        </div>

        <div class="post-content">
          <%= simple_format(@post.content) %>
        </div>
      </div>
    </div>

    <!-- „Ç≥„É°„É≥„Éà„Çª„ÇØ„Ç∑„Éß„É≥ -->
    <div class="comment-section fade-in-up">
      <h3>
        <i class="fas fa-comments text-primary me-2"></i>
        „Ç≥„É°„É≥„Éà (<%= @comments.count %>)
      </h3>
      
      <% if @comments.any? %>
        <% @comments.each do |comment| %>
          <div class="card mb-3">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start">
                <div>
                  <div class="d-flex align-items-center">
                    <i class="fas fa-user me-2 text-muted"></i>
                    <span class="text-muted">
                      <%= comment.anonymous? ? "ÂåøÂêç" : comment.author_name %> | 
                      <i class="fas fa-clock me-1"></i>
                      <%= comment.created_at.strftime("%Y/%m/%d %H:%M") %>
                    </span>
                  </div>
                </div>
                <div class="d-flex align-items-center gap-2">
                  <% if comment.anonymous? %>
                    <span class="anonymous-badge">
                      <i class="fas fa-user-secret me-1"></i>ÂåøÂêç
                    </span>
                  <% end %>
                  <%= link_to post_comment_path(@post, comment), 
                      method: :delete, 
                      data: { 
                        confirm: "„Åì„ÅÆ„Ç≥„É°„É≥„Éà„ÇíÂâäÈô§„Åó„Åæ„Åô„ÅãÔºü",
                        turbo_method: :delete 
                      }, 
                      class: "btn btn-outline-danger btn-sm" do %>
                    <i class="fas fa-trash me-1"></i>
                  <% end %>
                </div>
              </div>
              <p class="card-text mt-2"><%= simple_format(comment.content) %></p>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="alert alert-info">
          <i class="fas fa-info-circle me-2"></i>
          „Åæ„Å†„Ç≥„É°„É≥„Éà„Åå„ÅÇ„Çä„Åæ„Åõ„Çì„ÄÇÊúÄÂàù„ÅÆ„Ç≥„É°„É≥„Éà„ÇíÊäïÁ®ø„Åó„Å¶„Åø„Åæ„Åõ„Çì„ÅãÔºü
        </div>
      <% end %>

      <!-- „Ç≥„É°„É≥„ÉàÊäïÁ®ø„Éï„Ç©„Éº„É† -->
      <div class="card mt-4">
        <div class="card-body">
          <h5>
            <i class="fas fa-edit text-primary me-2"></i>
            „Ç≥„É°„É≥„Éà„ÇíÊäïÁ®ø
          </h5>
          <%= form_with model: [@post, @comment], local: true do |f| %>
            <div class="mb-3">
              <%= f.label :content, "„Ç≥„É°„É≥„ÉàÂÜÖÂÆπ", class: "form-label" %>
              <%= f.text_area :content, class: "form-control", rows: 3, required: true, placeholder: "„Ç≥„É°„É≥„Éà„ÇíÂÖ•Âäõ„Åó„Å¶„Åè„Å†„Åï„ÅÑ..." %>
            </div>
            
            <div class="mb-3">
              <div class="form-check">
                <%= f.check_box :anonymous, class: "form-check-input", id: "comment_anonymous" %>
                <%= f.label :anonymous, "ÂåøÂêç„ÅßÊäïÁ®ø", class: "form-check-label", for: "comment_anonymous" %>
              </div>
            </div>

            <div class="mb-3" id="author_name_field">
              <%= f.label :author_name, "ÂêçÂâçÔºà‰ªªÊÑèÔºâ", class: "form-label" %>
              <%= f.text_field :author_name, class: "form-control", placeholder: "„ÅäÂêçÂâç„ÇíÂÖ•Âäõ„Åó„Å¶„Åè„Å†„Åï„ÅÑ..." %>
            </div>

            <%= f.submit "„Ç≥„É°„É≥„Éà„ÇíÊäïÁ®ø", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const anonymousCheckbox = document.getElementById('comment_anonymous');
  const authorNameField = document.getElementById('author_name_field');
  
  if (anonymousCheckbox) {
    anonymousCheckbox.addEventListener('change', function() {
      if (this.checked) {
        authorNameField.style.display = 'none';
      } else {
        authorNameField.style.display = 'block';
      }
    });
  }
});
</script>
